<%= form_with model: post, url: posts_path, id: dom_id(post), html: { class: 'my-4', data: { controller: 'turbo-form' } } do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:
      </h2>
      <ul>
        <% post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_area :body, placeholder: 'Enter your post', class: 'form-control', rows: 3 %>
  </div>

  <div class="actions my-2">
    <%= f.submit class: "btn btn-primary", data: { 'turbo-form-target': 'submitInput' } %>
  </div>
<% end %>
